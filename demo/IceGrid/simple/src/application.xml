
<icegrid>

	<application name="Simple" >

		<node name="node1">
			<server id="SimpleServer" exe="java" activation="on-demand">

				<option>Server</option>

				<!-- This element may only appear as a child of a server or service element. -->
				<adapter name="Hello" endpoints="tcp -h localhost">

					<!-- This element may only appear as a child of an adapter element or a replica-group element. -->
					<object identity="hello" type="::Demo::Hello" property="Identity" />
				</adapter>

				<!--  -->
				<property name="IceMX.Metrics.Debug.GroupBy" value="id" />
				<property name="IceMX.Metrics.Debug.Disabled" value="1" />
				<property name="IceMX.Metrics.ByParent.GroupBy" value="parent" />
				<property name="IceMX.Metrics.ByParent.Disabled" value="1" />

			</server>

		</node>

	</application>

</icegrid>
